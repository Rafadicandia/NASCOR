<?php

// Función para generar un array aleatorio con los índices de los ganadores
function creaListaaleatrorios($premios, $cantConcursantes) {
    $ganadores = array();
    $cantConcursantes = $cantConcursantes -1;
    while (count($ganadores) < $premios) {
        $ganador = rand(0, $cantConcursantes);
        if (!in_array($ganador, $ganadores)) {
            $ganadores[] = $ganador;
        }
    }
}
    return $ganadores;
    if ($_SERVER['REQUEST_METHOD'] == "POST") { ?>
        <?php echo $_POST["premio1"]; ?><br>
        <?php echo $_POST["cantidad1"]; ?><br>
        <?php echo $_POST["premio2"]; ?><br>
        <?php echo $_POST["cantidad2"]; ?><br>
    
    <?php 
    }
   
// Definir array con los nombres de los participantes
$concursantes = array(
    "Juan",
    "María",
    "Pedro",
    "Ana",
    "Luis",
);
foreach ($concursantes as $concursante) {
    echo "<li>$concursante</li>";
}

// Llamar a la función. Con la cantidad de premios y la cantidad de participantes
$premio1 = $_POST["premio1"];
$cantConcursantes = count($concursantes);
$listaganadores = creaListaaleatrorios($premio1, $cantConcursantes);

foreach ($listaganadores as $numorder) {
    echo $concursantes[$numorder] ."<br>";
}
 

